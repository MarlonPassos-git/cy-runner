---
# SECRETS
#
# The name to look for secrets on memory or file
#
# It must be something like that:
# {
#   "config": {
#     "apiKey": "",
#     "apiToken": "",
#     "cookieName": "",
#     "robotMail": "",
#     "robotPassword": ""
#   },
#   "twilio": {
#     "apiUser": "",
#     "apiToken": ""
#   },
#   "jira": {
#     "authorization": ""
#   },
#   "cypress": {
#     "dashboardKey": ""
#   }
# }
#
# on development mode, please create a file '.[secretName].json'
# at the same place where cypress.yml resides to load it
#
# Remember to ignore this file on your Git
secretName: VTEX_QE

# Enabled or disable integrations
integration:
  jira: false
  cypress: false
  slack: false

configuration:
  # If you want to try another secrets on Cypress
  # set the next to false, you must create a file
  # cypress.env.json with the secrets
  authVtexCli: false
  devMode: false
  runHeaded: false
  browser: chrome
  createCypressEnvFile: true
  config:
    account: productusqa
    id: 2001459804
    domain: myvtex.com
    urlExternalSeller: https://productusqaseller.myvtex.com
    idUrl: https://vtexid.config.com.br/api/vtexid/pub/authenticate/default
  jira:
    account: config-dev
    board: jira-key
    issueType: task
  cypress:
    projectId: xyz
    video: true
    videoCompression: false
    videoUploadOnPasses: false
    screenshotOnRunFailure: true
    trashAssetsBeforeRuns: false
    viewportWidth: 1440
    viewportHeight: 900
    defaultCommandTimeout: 25000
    requestTimeout: 25000
    watchForFileChanges: false
    pageLoadTimeout: 45000
    browser: chrome
    chromeWebSecurity: false
  slack:
    channel: some-channel
  toolbelt:
    git: https://github.com/config/toolbelt.git
    branch: qe/cypress
  # The first will be used to store temp credentials
  stateFiles:
    - .config.json

workspace:
  # If blank, it will be dinamically defined
  name:
  setup:
    enabled: false
    stopOnFail: true
    # Must end with /
    path: cypress/integration/workspace/
    file: setup.spec.js
    # The app to be tested, it'll be uninstalled and linked
    link: config.b2b-quotes
    # Depdendencies should be first
    install:
      # App set
      - config.admin-customers
      - config.b2b-checkout-settings
      - config.b2b-orders-history
      - config.b2b-organizations-graphql
      - config.b2b-organizations
      - config.b2b-quotes-graphql
      - config.b2b-quotes
      - config.storefront-permissions
      - config.storefront-permissions-components
      - config.storefront-permissions-ui
      - config.quickorder
      # Theme
      - config.wish-list@1.x
      - config.location-availability@0.x
      - config.shopper-location@0.x
      - config.wordpress-integration@2.x
      - config.storefront-permissions-ui@0.x
      - config.b2bstore@2.x
    # Apps that should be uninstalled
    uninstall:
      - config.store-theme
  wipe:
    enabled: false
    stopOnFail: false
    # Must end with /
    path: cypress/integration/workspace/
    file: wipe.spec.js
  teardown:
    enabled: false
    stopOnFail: false
    # Must end with /
    path: cypress/integration/workspace/
    file: teardown.spec.js

testStrategy:
  # Example on how to run in order
  - A:
      enabled: false
      sendDashboard: false
      stopOnFail: false
      # If true, all files will run in one call
      parallel: false
      # If you need order, avoid wildcards
      files:
        - 'cypress/integration/b2b/b.spec.js'

  # Example on how to run in parallel
  # Only if Cypress Dashboard is enabled
  - B:
      enabled: false
      sendDashboard: false
      stopOnFail: true
      # If true, all files will run in one call
      parallel: true
      # If you need order, avoid more than one
      files:
        - 'cypress/integration/b2b/b.spec.js'
        # - 'cypress/integration/b2b/a.spec.js'

  # Example using wild selector
  - C:
      enabled: false
      sendDashboard: false
      stopOnFail: false
      parallel: false
      files:
        - 'cypress/integration/b2b/b.spec.js'

  # Example with dependency
  - D:
      enabled: true
      sendDashboard: false
      stopOnFail: false
      parallel: false
      files:
        - '**/b2b/*.spec.js'
      # Use the same name of earlier test
      dependency:
        - A
        - C

  # Example with fail exit
  - E:
      enabled: true
      sendDashboard: false
      stopOnFail: false
      parallel: false
      files:
        - 'cypress/integration/b2b/b.spec.js'
      dependency:
        - D
